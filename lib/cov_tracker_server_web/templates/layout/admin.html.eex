<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CoVTracker</title>
    <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/app.css") %>">
    <link rel="stylesheet" type="text/css" href="https://js.api.here.com/v3/3.1/mapsjs-ui.css" />
  </head>
  <body>
    <nav class="navbar is-link" role="navigation" aria-label="main navigation">
        <div class="container">
            <div class="navbar-brand">
                <a class="navbar-item" href="<%= Routes.admin_path(@conn, :index) %>">
                    CovTracker Admin Panel
                </a>

                <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false"
                    data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbar" class="navbar-menu">
                <div class="navbar-start">
                    <a class="navbar-item" href="<%= Routes.admin_path(@conn, :index) %>">
                        Dashboard
                    </a>
                    <a class="navbar-item" href="<%= Routes.admin_path(@conn, :index) %>">
                        Location Updates
                    </a>
                    <a class="navbar-item" href="<%= Routes.user_path(@conn, :list) %>">
                        Users
                    </a>
                    <a class="navbar-item" href="<%= Routes.admin_path(@conn, :index) %>">
                        Infections
                    </a>
                </div>

                <div class="navbar-end">
                    <a class="navbar-item" href="<%= Routes.user_path(@conn, :logout) %>">
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>


    <div class="container">
      <%# Flash Messages %>
      <%
        success = get_flash(@conn, :success)
        error = get_flash(@conn, :error)
      %>

      <%# Success %>
      <%= if success do %>
      <div class="notification is-success is-light">
        <%= get_flash(@conn, :success) %>
      </div>
      <% end %>

      <%# Error %>
      <%= if error do %>
      <div class="notification is-danger is-light">
        <%= get_flash(@conn, :error) %>
      </div>
      <% end %>

      <%= render @view_module, @view_template, assigns %>
    </div>

    <script src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
